<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Panel główny{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</head>
<body class="container">
{% block body %}
    <h1 class="my-4">Dodawanie klienta</h1>

    <h2 class="my-2">Dane firmy</h2>
    <form action="/clients/add/save" method="post">
        <div class="row mb-2">
            <div class="col-12 col-sm-6">
                <label class="form-label" for="name">Nazwa firmy</label>
                <input class="form-control form-control-sm" type="text" name="client[name]" id="name" required>
            </div>
            <div class="col-12 col-sm-6">
                <label class="form-label" for="nip">Nip</label>
                <input class="form-control form-control-sm" type="text" name="client[nip]" id="nip" required>
            </div>
            <div class="col-12 col-sm-6">
                <label class="form-label" for="package_id">Pakiet</label>
                <select class="form-control form-control-sm"  name="client[package_id]" id="package_id">
                    <option value="">wybierz...</option>
                    {% for package in packages %}
                        <option value="{{ package.id }}">{{ package.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-12 col-sm-6">
                <label class="form-label" for="employee_id">Opiekun</label>
                <select class="form-control form-control-sm"  name="client[employee_id]" id="employee_id">
                    <option value="">wybierz...</option>
                    {% for employee in employees %}
                        <option value="{{ employee.id }}">{{ employee.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <h2 class="my-2">Dane kontaktowe</h2>
        <div class="row mb-2">
            <div class="col-12 col-sm-6">
                <label class="form-label" for="contact_name">Nazwa</label>
                <input class="form-control form-control-sm" type="text" name="contact[name]" id="contact_name">
            </div>
            <div class="col-12 col-sm-6">
                <label class="form-label" for="email">E-mail</label>
                <input class="form-control form-control-sm" type="text" name="contact[email]" id="email">
            </div>
            <div class="col-12 col-sm-6">
                <label class="form-label" for="phone">Telefon</label>
                <input class="form-control form-control-sm" type="text" name="contact[phone]" id="phone">
            </div>
        </div>
        <button class="btn btn-primary btn-sm">Dodaj</button>
    </form>
{% endblock %}
</body>
</html>
