<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Panel główny{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</head>
<body class="container">
{% block body %}
    <h1 class="my-4">Panel główny</h1>

    <div class="d-flex align-items-center justify-content-end">
        <a href="/clients/add" class="btn btn-primary btn-sm">Dodaj klienta</a>
    </div>

    <ul class="nav nav-tabs" id="dataTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#clients">Klienci</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#employees">Pracownicy</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#contacts">Kontakty</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#packages">Pakiety</button>
        </li>
    </ul>

    <div class="tab-content mt-4">
        <div class="tab-pane fade show active" id="clients" role="tabpanel">
            {% include './common/_clients.html.twig' %}
        </div>
        <div class="tab-pane fade" id="employees" role="tabpanel">
            {% include './common/_employees.html.twig' %}
        </div>
        <div class="tab-pane fade" id="contacts" role="tabpanel">
            {% include './common/_contacts.html.twig' %}
        </div>
        <div class="tab-pane fade" id="packages" role="tabpanel">
            {% include './common/_packages.html.twig' %}
        </div>
    </div>
{% endblock %}
</body>
</html>
